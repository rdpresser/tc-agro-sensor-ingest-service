{
  "PathBase": null,
  "Database": {
    "Postgres": {
      "Host": "localhost",
      "Port": 5432,
      "Database": "tc-agro-ingestion-db",
      "MaintenanceDatabase": "postgres",
      "UserName": "postgres",
      "Password": "postgres",
      "Schema": "public",
      "ConnectionTimeout": 30,
      "MinPoolSize": 2,
      "MaxPoolSize": 20
    }
  },
  "Cache": {
    "Redis": {
      "Host": "localhost",
      "Port": 6379,
      "Password": ""
    }
  },
  "Messaging": {
    "RabbitMQ": {
      "Host": "localhost",
      "Port": 5672,
      "ManagementPort": 15672,
      "VirtualHost": "/",
      "Exchange": "sensor-ingest.events",
      "UserName": "guest",
      "Password": "guest",
      "AutoProvision": true,
      "Durable": true,
      "UseQuorumQueues": false,
      "AutoPurgeOnStartup": false
    }
  },
  "Services": {
    "Identity": {
      "HttpPort": 5001
    },
    "Farm": {
      "HttpPort": 5002
    },
    "SensorIngest": {
      "HttpPort": 5003
    },
    "AnalyticsWorker": {
      "HttpPort": 5004
    },
    "Dashboard": {
      "HttpPort": 5005
    }
  },
  "Auth": {
    "Jwt": {
      "Issuer": "http://localhost:5001",
      "SecretKey": "your-256-bit-secret-key-change-in-production-12345678",
      "Audience": [
        "tc-agro-identity-service",
        "tc-agro-farm-service",
        "tc-agro-sensor-ingest-service",
        "tc-agro-analytics-worker",
        "tc-agro-dashboard-service"
      ],
      "ExpirationInMinutes": 480
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
